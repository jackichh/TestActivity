<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.testactivity.ui.home.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_new_dictionary"
        android:name="com.example.testactivity.ui.newdictionary.NewDictionaryFragment"
        android:label="@string/new_dictionary"
        tools:layout="@layout/fragment_new_dictionary" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.testactivity.ui.settings.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/nav_dictionary_detail"
        android:name="com.example.testactivity.ui.dictionarydetail.DictionaryDetailFragment"
        android:label="Dictionary detail"
        tools:layout="@layout/fragment_dictionary_detail">
        <argument android:name="id"
            android:defaultValue="0"
            app:argType="integer"/>
    </fragment>


    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.testactivity.ui.dashboard.DashboardFragment"
        android:label="@string/search"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.testactivity.ui.notifications.NotificationsFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_notifications" />
</navigation>